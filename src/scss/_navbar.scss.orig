.navbar{
	width: 100%;
	line-height: 50px;
	position: relative;
	width: 100%;
	display: flex;
	justify-content: center
}
.menu{
	display: flex;
	text-transform: uppercase;
}
.nav{
	&__link{
		color: $collight;
		padding: 10px 16px;
		transition: 0.8s color ease-out;
		&:hover{
			color: $logo;
			text-shadow:0 0 5px rgba(0, 0, 0, 0.8);
			transition: 0.15s ease-in-out;
		}
	}
}

@media screen and (max-width:$dee_s){
	.navbarWrap{
		min-height: 40px;
	}
	.navbar{
		justify-content: left;
		line-height: 40px;
	}
	.nav__menu{
		flex-direction: column;
	}
	.menu{
		position: relative;
		bottom: 300px;
		background-color: rgba(0, 0, 0, 0.5);
		transition: 1s;


		& > li{
			padding-top: 8px;
			padding-bottom: 8px;
			border-bottom: solid 1px rgba(255, 255, 255, 0.144);
			text-align: center;
			&:last-child{
				border-bottom: none;
			}
		}

	}
	.nav{
		position: absolute;
		overflow: hidden;
		// height: 0;
		transition: 1s all;
		left:0px;
		top:45px;
		&:hover {
			min-height:200px;
		}
	}
	.burger{
		width: 42px;
		height: 38px;
		border-radius: 10%;
		position: relative;
		box-sizing: border-box;
		visibility: visible;
		&:hover ~.nav .menu{
			// height: 110px;
			bottom:0;
			transition: 1s;
		}
		&:hover{
			border:solid 1px $bg * 0.5;
			box-shadow:inset 0 0 2px 2px rgba(0, 0, 0, 0.1);
			transition: 0.15s ;
		}
		&:active{
			border:solid 1px $bg * 0.2;
			.bline, .bline::after, .bline::before{
				background-color: $bg * 0.8;
			}
		box-shadow:inset 0 0 3px 3px rgba(255, 255, 255, 0.1);
		transition: 0.15s ;
		}
	}
	.bline{
		&, &::after, &::before{
			position: absolute;
			width: 26px;
			display: block;
			background-color: $bg;
			top: 50%;
			margin-top: -1px;
			left: 50%;
			margin-left: -13px;
			border-radius: 2px;
			height: 2px;
			&:hover{
				background-color: $logo;
			}
		}
		&::after{
			content: '';
			
			transform: translateY(9px);
		}
		&::before{
			content: '';
			transform: translateY(-9px);
		}
	}
}


